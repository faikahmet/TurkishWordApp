<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KategoriActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarkategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/background_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/ivGoToBackkategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:rotation="180"
                app:srcCompat="@android:drawable/ic_media_play" />
            <TextView
                android:id="@+id/tvTitleKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivGoToBack"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:text="Geri"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/tvKategoriPuanSayisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="153dp"
                android:text="Puan:"
                android:textColor="@android:color/white"
                android:textSize="24sp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <GridView
        android:layout_below="@id/toolbarkategori"
        android:numColumns="1"
        android:id="@+id/gridViewKategoriler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>
</RelativeLayout>